set from = "peder.galteland@softwarelab.no"

set folder = "~/.local/share/mail/gmail-tsl"
unmailboxes *
mailboxes +inbox \
          +drafts \
          +sent \
          +github/capture-backend \
          +github/automation \
          +jira \
          +archive

